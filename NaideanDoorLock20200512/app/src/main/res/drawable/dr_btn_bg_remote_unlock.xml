<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <!-- 实心 -->
            <solid android:color="#FF7B06"/>
            <!-- 圆角 -->
            <corners
                android:radius="@dimen/dp_20" />


            <padding
                android:left="@dimen/dp_15"
                android:top="@dimen/dp_10"
                android:right="@dimen/dp_15"
                android:bottom="@dimen/dp_10" />
        </shape>
    </item>


</selector>
