<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/base_toolbar"/>
    <LinearLayout
        android:id="@+id/ll_general_manager"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_general_manager"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/general_manager"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_15"/>
        <ImageView
            android:id="@+id/iv_generalmanager_sel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_c"
            android:layout_marginRight="@dimen/dp_15"/>
    </LinearLayout>
    <View
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        app:layout_constraintTop_toBottomOf="@id/ll_general_manager"
        android:background="@color/color_e1e1e1" />
    <LinearLayout
        android:id="@+id/ll_nanny"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/view0"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_nanny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nanny"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/dp_15"/>
        <ImageView
            android:id="@+id/iv_nanny_sel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_n"
            android:layout_marginRight="@dimen/dp_15"/>
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        app:layout_constraintTop_toBottomOf="@id/ll_nanny"
        android:background="@color/color_e1e1e1" />
</android.support.constraint.ConstraintLayout>