<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar"
        />

    <TextView
        android:id="@+id/tvGeneralAdmin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:drawablePadding="@dimen/size_5"
        android:padding="@dimen/dp_15"
        android:drawableRight="@drawable/dr_ic_check"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:gravity="center_vertical"
        android:text="@string/general_admin"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/word_size_14" />

    <View
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        app:layout_constraintTop_toBottomOf="@id/tvGeneralAdmin"
        android:background="@color/color_e1e1e1" />

    <TextView
        android:id="@+id/tvNanny"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:drawablePadding="@dimen/size_5"
        android:padding="@dimen/dp_15"
        android:drawableRight="@drawable/dr_ic_check"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@id/view0"
        android:gravity="center_vertical"
        android:text="@string/nanny"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/word_size_14" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        app:layout_constraintTop_toBottomOf="@id/tvNanny"
        android:background="@color/color_e1e1e1" />

    <TextView
        android:id="@+id/tvUnlockWeekPeriodLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.4"
        android:background="@color/white"
        android:drawablePadding="@dimen/size_5"
        android:padding="@dimen/dp_15"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:text="@string/unlock_time_period"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/word_size_14" />
    <TextView
        android:id="@+id/tvUnlockWeekPeriod"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:drawablePadding="@dimen/size_5"
        android:padding="@dimen/dp_15"
        android:drawableRight="@drawable/ic_arrow_right"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="@id/tvUnlockWeekPeriodLabel"
        app:layout_constraintLeft_toRightOf="@id/tvUnlockWeekPeriodLabel"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/everyday"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="center_vertical|right"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/word_size_14" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        app:layout_constraintTop_toBottomOf="@id/tvUnlockWeekPeriodLabel"
        android:background="@color/color_e1e1e1" />

    <TextView
        android:id="@+id/tvUnlockFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:drawablePadding="@dimen/size_5"
        android:padding="@dimen/dp_15"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:gravity="center_vertical"
        android:text="@string/unlock_time_frame"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/word_size_14" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.11"
        app:layout_constraintTop_toBottomOf="@id/tvUnlockFrame"
        android:background="@color/white" />

    <TextView
        android:id="@+id/tvTime1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.3"
        android:background="@drawable/dr_bg_tv_border_selected"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="00:00-00:00"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/word_size_14"
        app:layout_constraintTop_toTopOf="@id/view3"
        app:layout_constraintBottom_toBottomOf="@id/view3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvTime2"
        />
    <TextView
        android:id="@+id/tvTime2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.3"
        android:background="@drawable/dr_bg_tv_border_selected"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="00:00-00:00"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/word_size_14"
        app:layout_constraintTop_toTopOf="@id/view3"
        app:layout_constraintBottom_toBottomOf="@id/view3"
        app:layout_constraintLeft_toRightOf="@id/tvTime1"
        app:layout_constraintRight_toLeftOf="@id/tvTime3"
        />
    <TextView
        android:id="@+id/tvTime3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.3"
        android:background="@drawable/dr_bg_tv_border_selected"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="00:00-00:00"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/word_size_14"
        app:layout_constraintTop_toTopOf="@id/view3"
        app:layout_constraintBottom_toBottomOf="@id/view3"
        app:layout_constraintLeft_toRightOf="@id/tvTime2"
        app:layout_constraintRight_toRightOf="parent"
        />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/tvCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white" />

    <com.sandy.guoguo.babylib.widgets.wheel.WheelView
        android:id="@+id/wheelViewStartHour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.22"
        />
    <com.sandy.guoguo.babylib.widgets.wheel.WheelView
        android:id="@+id/wheelViewStartMinute"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/wheelViewStartHour"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.22"
        />

    <com.sandy.guoguo.babylib.widgets.wheel.WheelView
        android:id="@+id/wheelViewEndMinute"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.22"
        />
    <com.sandy.guoguo.babylib.widgets.wheel.WheelView
        android:id="@+id/wheelViewEndHour"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/wheelViewEndMinute"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.22"
        />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        app:layout_constraintBottom_toTopOf="@id/wheelViewStartHour"
        android:background="@color/color_e1e1e1" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.2"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="@string/cancel"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toTopOf="@id/view4"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tvComplete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.2"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="@string/complete"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/font_16"
        app:layout_constraintBottom_toBottomOf="@id/tvCancel"
        app:layout_constraintRight_toRightOf="parent"
        />
    
    <android.support.constraint.Group
        android:id="@+id/groupCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tvUnlockWeekPeriodLabel,tvUnlockWeekPeriod,tvUnlockFrame,view2,view3,tvTime1,tvTime2,tvTime3"
        />
    <android.support.constraint.Group
        android:id="@+id/groupBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="tvCancel,tvComplete,view4,view5,wheelViewStartHour,wheelViewStartMinute,wheelViewEndHour,wheelViewEndMinute"
        />

</android.support.constraint.ConstraintLayout>




