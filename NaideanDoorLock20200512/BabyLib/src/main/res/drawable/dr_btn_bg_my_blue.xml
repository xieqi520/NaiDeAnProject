<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <!-- 实心 -->
            <solid android:color="@color/my_blue_focus"/>
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />


            <padding
                android:left="@dimen/dp_15"
                android:top="@dimen/dp_10"
                android:right="@dimen/dp_15"
                android:bottom="@dimen/dp_10" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <!-- 实心 -->
            <solid android:color="#a7e7ed"/>
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />


            <padding
                android:left="@dimen/dp_10"
                android:top="@dimen/dp_10"
                android:right="@dimen/dp_10"
                android:bottom="@dimen/dp_10" />
        </shape>
    </item>
</selector>
