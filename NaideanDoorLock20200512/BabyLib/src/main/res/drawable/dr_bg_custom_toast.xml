        <shape>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#1D1D1D" />
            <!-- 实心 -->
            <solid android:color="#1D1D1D"/>
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />


            <padding
                android:left="@dimen/dp_10"
                android:top="@dimen/dp_10"
                android:right="@dimen/dp_10"
                android:bottom="@dimen/dp_10" />
        </shape>
    </item>
</selector>