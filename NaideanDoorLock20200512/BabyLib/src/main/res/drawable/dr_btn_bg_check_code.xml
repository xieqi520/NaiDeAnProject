<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/edit_border" />
            <!-- 实心 -->
            <solid android:color="#F2F8F8"/>
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />


            <padding
                android:left="@dimen/dp_6"
                android:top="@dimen/dp_6"
                android:right="@dimen/dp_6"
                android:bottom="@dimen/dp_6" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/edit_border" />
            <!-- 实心 -->
            <solid android:color="#F2F8F8"/>
            <!-- 圆角 -->
            <corners
                android:radius="5dp" />


            <padding
                android:left="@dimen/dp_6"
                android:top="@dimen/dp_6"
                android:right="@dimen/dp_6"
                android:bottom="@dimen/dp_10" />
        </shape>
    </item>
</selector>
